@using Demo.Pl.Models.ViewModels
@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
   
}

@if (Model?.Count() > 0)
{
    <div class="card border-infi   mb-3 mt-5" style="max-width: 100%;">
        <div class="card-header">
            <h5>
                All Employees <a asp-controller="Employees" asp-action="Create" class="btn btn-warning" style="margin-left:800px;"><h6>Add New Employee</h6></a>
            </h5>


        </div>
        <div class="card-body">
            <form asp-action="Index">
                <div class="row d-flex">
                    <div class="col-md-6">
                        <input class="form-control me-sm-2" type="search" name="searchValue" placeholder="Search By Name!">
                    </div>
                    <div class="col-4">
                        <button class="btn btn-warning " type="submit">Search</button>
                    </div>

                </div>
            </form>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Hiring Date</th>
                            <th scope="col">Address</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Is Active</th>
                        <th scope="col">Email</th>
                        <th scope="col">Department</th>
                        <th scope="col">Photo</th>

                        <th scope="col">Phone</th>
                        <th scope="col">Details</th>
                        <th scope="col">Update</th>
                        <th scope="col">Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach(var employee in Model) { 
                        <tr class="table-primary">
                            <td>@employee.Name</td>
                            <td>@employee.Age</td>
                            <td>@employee.HirngDate</td>
                            <td>@employee.EmployeeAddress</td>
                            <td>@employee.Salary</td>
                            <td>@(employee.IsActive ? "Yes !" : "No !")</td>
                            <td>@employee.Email</td>
                            <td>@employee.Department?.Name</td>
                            <td><img src="~/files/images/@employee.ImageName" class="img-fluid rounded" height="60" width="60"/></td>

                            <td>@employee.Phone</td>
                            <partial name="_ButtonsPartial" model="@employee.Id"/>
                  
                    </tr>
                    }  
                
                </tbody>
            </table>
        </div>
    </div>

}
else
{
    <div class="alert alert-dismissible alert-danger mt-5">
        <h3>
            There Are No Employees Found!
            <a asp-controller="Employees" asp-action="Create" class="btn btn-warning" style="margin-left:400px;"><h6>Add New Employee</h6></a>
        </h3>
    </div>
}

