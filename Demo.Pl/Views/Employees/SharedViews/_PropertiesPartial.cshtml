@model EmployeeViewModel
@{
    var departments = new SelectList(ViewBag.Departments, "Id", "Name");

}
<div class="form-group">
    <img src="~/files/images/@Model.ImageName" class="img-fluid rounded mt-2 mb-2" height="200" width="200"/>
    <div/>
<div class="form-group">
    <label class="form-label mt-2" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" readonly placeholder="Enter Employee Name">
</div>
<div class="form-group">
    <label class="form-label mt-2" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" readonly placeholder="Enter Employee Age">
</div>
<div class="form-group">
    <label class="form-label mt-2" asp-for="EmployeeAddress"></label>
    <input asp-for="EmployeeAddress" class="form-control" readonly placeholder="Enter Employee Address">
</div>
<div class="form-group">
    <label class="form-label mt-2" asp-for="Phone"></label>
    <input asp-for="Phone" class="form-control" readonly placeholder="Enter Employee Address">
</div>
<div class="form-group">
    <label class="form-label mt-2" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" readonly placeholder="Enter Employee Email">
</div>
<div class="form-group">
    <label class="form-label mt-2" asp-for="HirngDate"></label>
    <input asp-for="HirngDate" class="form-control" readonly placeholder="Enter Employee Hiring Date">
</div>
<div class="form-group">
    <label class="form-label mt-2" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control"  placeholder="Enter Employee Salary">
</div>
<div class="form-group">
    <label class="form-label mt-2 " asp-for="DepartmentId"></label>

    <select class="form-select" asp-for="DepartmentId" disabled readonly asp-items="departments">

        <option value="">--Select Department--</option>

    </select>
</div>

<div class="form-check form-switch mt-3">
    <input class="form-check-input" type="checkbox" readonly asp-for="IsActive">
    <label class="form-check-label" asp-for="IsActive"></label>
</div

   